<script>
    <table id="querT" class="table" style="width:100%">
    @{ if(ViewBag.Row != null)
        {
            foreach (row row_name in ViewBag.Row)
            {
                <tbody>

                        int row_count = new row_name.count;
                        <span>row_count</span>
                        @{
                            foreach (string rows in row_name.column)
                            {
                                <td>@rows ::</td>
                            }
