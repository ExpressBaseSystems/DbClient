<div id="droppable" class="drop-box"></div>

<div class="cont">
    <div class="mytree" style="padding:12px;border:2px solid #ccc; margin-right: 850px; margin-top:20px; position: relative; height: 500px; overflow: auto ;">
        @{
            foreach (KeyValuePair<string, MyTable> Table_kvp in ViewBag.Tables)
            {
                <div table-name="@Table_kvp.Key" id="@Table_kvp.Key">


                    <span class="table-name">@Table_kvp.Key</span>
                    @{
                        MyTable table = Table_kvp.Value;
                        string schema = table.Schema;
                        List<string> Indexes = table.Index;
                        List<MyColumn> Columns = table.Columns;
                        <div>
                            <span>Schema</span>
                            <div>@schema</div>
                        </div>
                        <div>
                            <span>Index</span>
                            @foreach (string Index in Indexes)
                            {
                                <div>@Index</div>
                            }
                        </div>
                        <div>
                            <span>Column</span>
                            @foreach (MyColumn Column in Columns)
                            {
                                <div>@Column.ColumnName :: @Column.ColumnType :: @Column.ColumnKey :: @Column.ColumnTable</div>
                            }
                        </div>
                    }
                </div>
                        }
        }

    </div>

</div>
@*<textarea class="codemirror-textarea"></textarea>*@
<textarea id="code" name="code" style="margin-right: 850px; margin-top:20px; position: relative; height: 500px; overflow: auto ; margin-right: 850px; margin-top:530px; position: relative; height: 200px; overflow: auto; ;"></textarea>
